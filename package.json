{
  "name": "n8n-agent",
  "version": "1.0.0",
  "description": "Базовая авторизация для n8n через Playwright MCP (только auth/state.json).",
  "main": "index.js",
  "directories": {},
  "scripts": {
    "auth:refresh": "node -r dotenv/config auth/login.js",
    "auth:check": "node -r dotenv/config auth/check_auth.js",
    "auth:demo": "HEADLESS=false DEMO=1 SLOWMO=350 node -r dotenv/config auth/login.js",
    "mcp:start": "npx @playwright/mcp@0.0.44 --storage-state=auth/state.json",
    "postinstall": "playwright install --with-deps",
    "validate:artifacts": "node scripts/validate-artifacts.js",
    "cycle": "tsx scripts/run_cycle.ts",
    "qa:verify": "tsx scripts/qa/verify.ts",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.18 <23"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "tsx": "^4.19.0",
    "dotenv": "^16.4.5",
    "@playwright/mcp": "0.0.44",
    "playwright": "^1.56.1",
    "husky": "^9.1.6"
  }
}
